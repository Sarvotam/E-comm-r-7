<div class="py-20 text-center text-white bg-gray-800">
  <h1 class="mb-4 text-5xl font-bold">Welcome to ecommerece application</h1>
  <p class="mb-8 text-xl">Your one-stop shop for all your e-commerce needs!</p>
  <%= link_to "Shop now", root_path, class: "bg-gray-500 hover:bg-gray-600 text-white font-bold py-2 px-4 rounded" %>
</div>

<div class="grid grid-cols-1 gap-10 mt-8 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-3 xl:grid-cols-3">
  <% @main_categories.each do |category| %>
    <div class="flex flex-col mb-4">
      <%= link_to category_path(category) do %>
        <h2 class="mb-2 text-lg font-medium text-center text-gray-800"><%= category.name %></h2>
        <%= category.image.present? ? image_tag(category.image, class: "mx-auto max-w-full h-auto") : image_tag("http://via.placeholder.com/512", class: "mx-auto max-w-full h-auto") %>
      <% end %>
    </div>
  <% end %>
</div>

